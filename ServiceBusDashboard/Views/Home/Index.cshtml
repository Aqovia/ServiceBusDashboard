@model ServiceBusDashboard.Code.SbConnectionStrings

<div class="container-fluid">
    <a href="/Home/ReloadList" class="btn btn-primary float-right mt-3">Reload list</a>
    <h1>Service Bus List</h1>

    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            @if (Model == null || Model.Groups.Length <= 0)
            {
                <div>
                    No connection string found!
                </div>
            }
            else
            {
                foreach (var group in Model.Groups)
                {
                    <h2>@group.Name</h2>
                    <div class="row">
                        @foreach (var connectionString in group.Items)
                        {
                            <div class="col-sm-4"><a href="/Home/ServiceBus?groupName=@group.Name&name=@connectionString.Name" class="btn btn-info mb-2 btn-block">@connectionString.Name</a></div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>
